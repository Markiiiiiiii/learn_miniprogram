/* miniprogram/pages/index/index.wxss */
.infowidth{
    width:750rpx;
}
.reversebutton{
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
}
.card{
    width: 600rpx;
    box-shadow: 04rpx 8rpx 0 rgba(0, 0, 0, 0.2), 06rpx 20rpx 0 rgba(0, 0, 0, 0.19);
    display: -ms-flexbox;
    -ms-flex-direction: column;
    flex-direction: column;
    align-content: space-between;
    margin: 20rpx;
}
.cardheader {
    background-color: #4CAF50;
    color: white;
    padding: 10rpx;
    font-size: 34rpx;
    /* text-align: center; */
    }
    
.cardinfo {
        padding: 16rpx;
        background-color: #fff;
        }
.infolist{
    font-size: 28rpx;
    color: #666;
    overflow:hidden;
    white-space: nowrap;
}
.cardcontainer {
    padding: 10rpx;
    background-color: #9DC45F;
    color:#fff;
    text-align: center;
    height: 50rpx;
    }
.coverover{
    width: 100%;
    height: 100%;
    position: fixed;
    top:0px;
    left: 0px;
    background: rgba(0, 0, 0, 0.8);
    overflow: hidden;
    text-align: center;
}
.coverlistshow{
    width: 60%;
    margin: 10% auto;
}
.coverclose{
    width: 100%;
    display: flex;
    justify-content: center;
}
.index {
    width: 100%;
    height: auto;
    position: relative;
    display: flex;
    flex-direction:columnl;
    justify-content: flex-start;
    padding:0 10rpx;
    box-sizing: border-box;
  }
  .index view .text {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    background: greenyellow;
    border-radius: 50%;
  }
  view .text:first-of-type {
    transform: translateX(0px);
  }